script(type="text/x-template")#slider-root
  .slider
    info(
        :work="currentWork"
      )
    display(
        :work="currentWork"
      )
    buttons(
        @slide="handleSlide"
        :index="currentIndex"
        :works="works"
      )
    
script(type="text/x-template")#slider-info
  .slider__info
    .works__title
      .subtitle {{work.title}}
    .works__tech 
      .works__tech-desc {{work.skills}}
    .works__link
      a(:href="work.link" target="_blanck").link__link
        +icon('link','link__icon')
        | Просмотреть сайте
script(type="text/x-template")#slider-display
  .slider__display
    .slider__main
      .slider__main-img-wrap
        img(:src="work.photo", alt="").slider__main-img-img

script(type="text/x-template")#slider-buttons
  .slider__buttons
    .slider__button(@click="slide('prev')")
      .slider__preveiw
        img(:src="prevButtonWorks[index].photo", alt="").slider__preveiw-img
      .slider__filter
        .slider__arrow_down
          +icon('arrow_down','slider__arrow-icon')
    .slider__button(@click="slide('next')")
      .slider__preveiw
        img(:src="nextButtonWorks[index].photo", alt="").slider__preveiw-img
      .slider__filter
        .slider__arrow_up
          +icon('arrow_down','slider__arrow-icon')
