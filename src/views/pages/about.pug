      script(type="text/javascript" charset="utf-8" async="" src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A30a3ecd52b152b51e64d8f157471440298fcdb5b0cb945e8d0e6552f8cf6f668&width=100%&height=100%&lang=ru_RU&scroll=false")
